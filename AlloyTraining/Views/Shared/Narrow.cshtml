@model PageViewModel<AlloyTraining.Models.Pages.SitePageData>

<div class="block span4" style="background-color: palegreen;">
    <div class="border">
        <a href="@Url.ContentUrl(Model.CurrentPage.ContentLink)">
            <h2 @Html.EditAttributes(m => m.CurrentPage.Name)>@Model.CurrentPage.Name</h2>
            <p class="introduction" @Html.EditAttributes(m => m.CurrentPage.MetaDescription)>
                @Model.CurrentPage.MetaDescription</p>
        </a>
    </div>
</div>

